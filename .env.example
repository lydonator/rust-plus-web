# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Steam Authentication
STEAM_API_KEY=your-steam-api-key

# Production URLs (use these for deployment)
# CRITICAL: STEAM_REALM must ALWAYS be localhost for Facepunch API compatibility
# The Chrome extension will intercept localhost callbacks and redirect to your production domain
STEAM_REALM=http://localhost:3000
STEAM_RETURN_URL=https://app.rustplus.online/api/auth/return
NEXT_PUBLIC_APP_URL=https://app.rustplus.online
NEXT_PUBLIC_SHIM_URL=https://shim.rustplus.online

# Development URLs (same STEAM_REALM, different app URLs)
# STEAM_REALM=http://localhost:3000
# STEAM_RETURN_URL=http://localhost:3000/api/auth/return
# NEXT_PUBLIC_APP_URL=http://localhost:3000
# NEXT_PUBLIC_SHIM_URL=http://localhost:4000

# Security
JWT_SECRET=your-secure-jwt-secret-change-this-in-production

# Environment
NODE_ENV=production
